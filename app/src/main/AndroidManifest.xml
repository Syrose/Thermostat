<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tuehomework.thermostat" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.EditSwitches"
            android:label="@string/title_activity_edit_switches" >
        </activity>
        <activity
            android:name=".UI.EditTemperature"
            android:label="@string/title_activity_edit_temperature" >
        </activity>
        <activity
            android:name=".UI.ScheduleSettings"
            android:label="@string/title_activity_schedule_settings" >
        </activity>
        <activity
            android:name=".UI.ThermostatChooser"
            android:label="@string/title_activity_thermostat_chooser" >
        </activity>
    </application>

</manifest>
